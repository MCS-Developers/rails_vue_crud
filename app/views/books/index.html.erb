<div class="container js-booksIndex">
  <h1>[Rails+Vue.js]~Bookshelf~</h1>
  <div class="row">
    <% @books.each do |book| %>
      <div>
        <span v-on:click="setBookInfo(<%= book.id %>)"><%= book.title %></span>
      </div>
    <% end %>
  </div>
  <div class="row" v-show="bookInfoBool">
    <div class="col s12 m12">
      <span class="card-title">
        {{ bookInfo.title }}
      </span>
      <div class="detail">
        {{ bookInfo.author }}
      </div>
      <div class="detail">
        {{ bookInfo.publisher }}
      </div>
      <div class="detail">
        {{ bookInfo.genre }}
      </div>
    </div>
  </div>
</div>
<%= javascript_pack_tag 'book' %>
